<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:clickable="true"
    android:focusable="true"
    app:cardUseCompatPadding="true"
    android:foreground="?selectableItemBackground"
    app:cardBackgroundColor="@color/cardsColor"
    android:layout_height="260dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:id="@+id/image_long_adapter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="140dp"
            android:scaleType="fitXY"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@id/image_long_adapter"
            android:layout_marginTop="8dp"
            android:maxLines="1"
            tools:text="DevFest 2014"
            android:id="@+id/long_adapter_event_title"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:layout_marginTop="10dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:id="@+id/long_adapter_extra_details"
            tools:text="Here we will place the dummy introduction of the Event that is being organised"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintStart_toEndOf="@id/long_adapter_event_title"
            app:layout_constraintTop_toBottomOf="@id/long_adapter_event_title" />


    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>
