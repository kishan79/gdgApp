<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:clickable="true"
    android:focusable="true"
    app:cardUseCompatPadding="true"
    android:foreground="?selectableItemBackground"
    app:cardBackgroundColor="@color/cardsColor"
    android:id="@+id/card_long_adapter"
    android:layout_height="160dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_long_adapter"
            android:layout_width="300dp"
            android:layout_height="140dp"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/long_adapter_event_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:maxLines="1"
            android:layout_marginStart="12dp"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@id/image_long_adapter"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="DevFest 2014" />

        <TextView
            android:id="@+id/long_adapter_extra_details"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:maxLines="5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image_long_adapter"
            app:layout_constraintTop_toBottomOf="@id/long_adapter_event_title"
            tools:text="Here we will place the dummy introduction of the Event that is being organised/Here we will place the dummy introduction of the Event that is being organised.Here we will place the dummy introduction of the Event that is being organised.Here we will place the dummy introduction of the Event that is being organised.Here we will place the dummy introduction of the Event that is being organised" />


    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>
